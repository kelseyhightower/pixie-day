#!/bin/bash

gcloud container clusters create oregon \
  --addons "HorizontalPodAutoscaling,HttpLoadBalancing" \
  --cluster-version latest \
  --enable-autoupgrade \
  --enable-autorepair \
  --enable-binauthz \
  --enable-stackdriver-kubernetes \
  --enable-network-egress-metering \
  --enable-resource-consumption-metering \
  --resource-usage-bigquery-dataset google_kubernetes_engine \
  --enable-ip-alias \
  --enable-intra-node-visibility \
  --enable-stackdriver-kubernetes \
  --default-max-pods-per-node 20 \
  --max-pods-per-node 20 \
  --machine-type e2-standard-8 \
  --metadata 'disable-legacy-endpoints=true' \
  --network google-kubernetes-engine \
  --no-enable-basic-auth \
  --no-issue-client-certificate \
  --num-nodes 3 \
  --scopes cloud-platform \
  --zone us-west1-a

gcloud container clusters create frankfurt \
  --addons "HorizontalPodAutoscaling,HttpLoadBalancing" \
  --cluster-version latest \
  --enable-autoupgrade \
  --enable-autorepair \
  --enable-binauthz \
  --enable-stackdriver-kubernetes \
  --enable-network-egress-metering \
  --enable-resource-consumption-metering \
  --resource-usage-bigquery-dataset google_kubernetes_engine \
  --enable-ip-alias \
  --enable-intra-node-visibility \
  --enable-stackdriver-kubernetes \
  --default-max-pods-per-node 20 \
  --max-pods-per-node 20 \
  --machine-type e2-standard-8 \
  --metadata 'disable-legacy-endpoints=true' \
  --network google-kubernetes-engine \
  --no-enable-basic-auth \
  --no-issue-client-certificate \
  --num-nodes 3 \
  --scopes cloud-platform \
  --zone europe-west3-a

gcloud container clusters create montreal \
  --addons "HorizontalPodAutoscaling,HttpLoadBalancing" \
  --cluster-version latest \
  --enable-autoupgrade \
  --enable-autorepair \
  --enable-binauthz \
  --enable-stackdriver-kubernetes \
  --enable-network-egress-metering \
  --enable-resource-consumption-metering \
  --resource-usage-bigquery-dataset google_kubernetes_engine \
  --enable-ip-alias \
  --enable-intra-node-visibility \
  --enable-stackdriver-kubernetes \
  --default-max-pods-per-node 20 \
  --max-pods-per-node 20 \
  --machine-type e2-standard-8 \
  --metadata 'disable-legacy-endpoints=true' \
  --network google-kubernetes-engine \
  --no-enable-basic-auth \
  --no-issue-client-certificate \
  --num-nodes 3 \
  --scopes cloud-platform \
  --zone northamerica-northeast1-a
